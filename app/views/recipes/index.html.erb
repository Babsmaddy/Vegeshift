<div class="container">

<div class="row justify-content-center p-4">
  <div class="search input-group mb-3 border rounded-pill border-3 p-1" style="max-width: 600px;">
    <div class="input-group-prepend">
      <i class="icon fa fa-search input-group-text border-0"></i>

    </div>
    <input
      type="text"
      class="form-control border-0"
      placeholder="Rechercher une recette veggie"
      aria-label="Username"
      aria-describedby="basic-addon1"
    >
  </div>
</div>

<div class="row row-cols-1 row-cols-sm-2 g-3 mb-4">
  <% @recipes.each do |recipe| %>
    <div class="col-6">
      <div class="card rounded m-3">
        <div class="position-relative">
           <% if recipe.photo.attached? %>
              <%= cl_image_tag recipe.photo.key, class: "card-img-top", style: "width: 100%; height: auto;" %>
          <% else %>
              <%= image_tag "home_recipe_4.png", class: "card-img-top", style: "width: 100%; height: auto;" %>
          <% end  %>
            <div class="card-recipe-co2 d-flex align-items-center">
              <%= image_tag("co2-cloud.png", class: "img-fluid") %>
              <%= recipe.co2 %>g
            </div>
          </div>

        <div class="card-body">
          <div class="row align-items-center">
            <div class="text-center mb-3">
              <h2
                class="text-uppercase"
                style="font-weight: semi-bold; font-size: 1rem;">
                <%= recipe.name %>
              </h2>
            </div>
          </div>
          <div class="d-flex gap-2">
            <div class="d-flex justify-content-between">
              <%= image_tag("timer.png", class: "img-fluid") %>
              <%= recipe.time %>
              <p class="card-text mt-3">
                <span style="font-weight: bold; font-size: 0.9rem;"></span>
              </p>
            </div>
            <div class="d-flex justify-content-between">
              <%= image_tag("difficulty.png", class: "img-fluid") %>
              <%= recipe.difficulty %>
              <p class="card-text mt-3">
                <span style="font-weight: bold;"></span>
              </p>
            </div>
          </div>

          <div class="text-center mt-3">
            <%= link_to "Go", recipe_path(recipe), class: "button-veggie px-4 py_2" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
